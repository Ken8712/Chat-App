<!- ========== _main_chat ============== >

<div class="main__upper">
  <div class="main__upper-roomname"><%= @room.name %></div>
  <div class="main__upper-roomexit">
    <a href="#">チャットを終了する</a>
  </div>
</div>




<div class="main__middle">

  <%= render partial: 'message', collection: @messages %>

</div>

<div class="main__lower">

  <%= form_with model: [@room, @message], html: {class: "form"}, local: true do |f|%>
  <div class="main__lower-inputbox">
    <%= f.text_field :content, class: 'form-message', placeholder: 'type a message' %>
    <label class="form-image">
      <span class="image-file">画像</span>
      <%= f.file_field :image, class: 'hidden' %>
    </label>
  </div>
  <%= f.submit '送信', class: 'main__lower-submit' %>
<% end %>

</div>